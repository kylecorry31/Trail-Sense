<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/beacons">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_show_ar_beacon_layer"
            app:singleLineTitle="false"
            app:title="@string/visible" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/paths">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_show_ar_path_layer"
            app:singleLineTitle="false"
            app:title="@string/visible" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/astronomy">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_show_ar_astronomy_layer"
            app:singleLineTitle="false"
            app:title="@string/visible" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/pref_ar_layer_settings_astronomy_date_holder"
            app:singleLineTitle="false"
            app:title="@string/date" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/grid">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_show_ar_grid_layer"
            app:singleLineTitle="false"
            app:title="@string/visible" />

    </PreferenceCategory>


</PreferenceScreen>

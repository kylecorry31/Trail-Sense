<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kylecorry.andromeda.views.toolbar.Toolbar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flattenButtons="true"
        app:rightButtonIcon="@drawable/ic_cancel"
        app:showSubtitle="false"
        app:title="@string/layers" />

    <TextView
        android:id="@+id/override_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ar_layer_override_message"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/preferences_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

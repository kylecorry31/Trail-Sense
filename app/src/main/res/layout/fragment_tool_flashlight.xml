<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/flashlight_btn"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="?android:colorBackgroundFloating"
        android:cropToPadding="true"
        android:padding="64dp"
        android:scaleType="centerCrop"
        android:tint="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flashlight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

            <ImageButton
                android:id="@+id/strobe_btn"
                android:layout_width="117dp"
                android:layout_height="117dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="?android:colorBackgroundFloating"
                android:cropToPadding="true"
                android:padding="32dp"
                android:scaleType="centerCrop"
                android:tint="?android:textColorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/flashlight_btn"
                app:layout_constraintStart_toStartOf="@+id/flashlight_btn"
                app:srcCompat="@drawable/ic_strobe" />

            <ImageButton
                android:id="@+id/sos_btn"
                android:layout_width="117dp"
                android:layout_height="117dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="?android:colorBackgroundFloating"
                android:cropToPadding="true"
                android:padding="32dp"
                android:scaleType="centerCrop"
                android:tint="?android:textColorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/flashlight_btn"
                app:layout_constraintEnd_toEndOf="@+id/flashlight_btn"
                app:srcCompat="@drawable/flashlight_sos" />

    </LinearLayout>


</LinearLayout>
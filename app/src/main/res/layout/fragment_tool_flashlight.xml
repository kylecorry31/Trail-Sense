<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/flashlight_btn"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble"
        android:backgroundTint="?android:colorBackgroundFloating"
        android:cropToPadding="true"
        android:padding="64dp"
        android:scaleType="centerCrop"
        android:tint="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flashlight" />

    <ImageButton
        android:id="@+id/strobe_btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/bubble"
        android:backgroundTint="?android:colorBackgroundFloating"
        android:cropToPadding="true"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:tint="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/flashlight_btn"
        app:layout_constraintStart_toStartOf="@+id/flashlight_btn"
        app:srcCompat="@drawable/ic_strobe" />

    <ImageButton
        android:id="@+id/sos_btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/bubble"
        android:backgroundTint="?android:colorBackgroundFloating"
        android:cropToPadding="true"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:tint="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/flashlight_btn"
        app:layout_constraintEnd_toEndOf="@+id/flashlight_btn"
        app:srcCompat="@drawable/flashlight_sos" />

</androidx.constraintlayout.widget.ConstraintLayout>